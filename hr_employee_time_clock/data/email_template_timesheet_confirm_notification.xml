<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="email_template_timesheet_confirm_notification" model="mail.template">
            <field name="name">Timesheet confirm notification - Send by Email</field>
            <field name="email_from">${(object.create_uid.email and '%s &lt;%s&gt;' % (object.create_uid.name, object.create_uid.email) or '')|safe}</field>
            <field name="subject">Confirm Timesheet</field>
            <field name="partner_to">${object.user_id.id}</field>
            <field name="model_id" ref="hr_employee_time_clock.model_hr_timesheet_sheet_sheet"/>
            <field name="auto_delete" eval="False"/>
            <field name="lang">${object.employee_id.user_id.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
                <span style="padding:5px;font-size: 14px;color:#000000">
                     <p>Dear ${object.employee_id.name},</p>
                    <p>Please check your summary of month attendance sheet - <b><a href='https://odoo.bytebrand.net/web?#id=${object.id}&view_type=form&model=hr_timesheet_sheet.sheet'>sheet</a></b><br/>
                       In case of inaccuracies - contact your HR manager. If everything seems fine - click the button "Submit to manager".<br/>
                       </p>
                    <p>Have a nice day,<br/>
                       Bytebrand team.</p>
                </span>
        ]]></field>
        </record>
    </data>
</odoo>