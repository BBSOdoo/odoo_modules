<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <record id="hr_employee_time_sheet_autoapprove_cron" model="ir.cron">
        <field name="name">Auto-approve timesheets</field>
        <field name="model_id" ref="model_hr_timesheet_sheet_sheet"/>
        <field name="state">code</field>
        <field name="code">model.action_timesheet_auto_approve()</field>
        <field name="nextcall" eval="(datetime.utcnow().replace(day=28) +
            timedelta(days=4)).replace(day=5).strftime('%Y-%m-%d 10:00:00')" />
        <field name="interval_number">1</field>
        <field name="interval_type">months</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>
</odoo>